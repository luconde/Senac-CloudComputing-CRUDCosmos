@{
    ViewData["Title"] = "Visualizar os dados de uma pessoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4">Pessoa</h1>
<p>@Html.ActionLink("Associar", "List", "Association", new { Id = Model.Id})</p>
<p></p>
    <div class="form-group">
        <label>Email:</label>
        <input class="form-control" type="Text" name="Email" value="@Model.Email" disabled />
        <input class="form-control" type="hidden" name="Email" value="@Model.Email" />
        <br />
    </div>
    <div class="form-group">
        <label>Primeiro Nome:</label>
        <Input class="form-control" type="Text" name="FirstName" value="@Model.FirstName" disabled />
        <br />
    </div>
    <div class="form-group">
        <label>Ultimo Nome:</label>
        <Input class="form-control" type="Text" name="LastName" value="@Model.LastName" disabled/>
        <br />
    </div>
    <div class="form-group">
        <label>Idade:</label>
        <Input class="form-control" type="Text" name="Age" value="@Model.Age" disabled />
        <br />
    </div>
<br />
<p>
    @Html.ActionLink("Voltar", "Index")
</p>
